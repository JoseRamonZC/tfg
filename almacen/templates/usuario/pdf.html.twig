{% block body %}
    <h1>Listado</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.nombre }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
